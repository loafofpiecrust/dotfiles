# FIXME sway currently isn't importing gsettings desktop schemas.
set $gnome org.gnome.desktop.interface
exec_always {
    gsettings set $gnome gtk-theme 'Arc'
    gsettings set $gnome icon-theme 'Paper'
    gsettings set $gnome cursor-theme 'Bibata_Oil'
}

# Inhibit idle on fullscreen video
# xwayland version
for_window [class="Firefox"] inhibit_idle fullscreen
# wayland version
for_window [app_id="firefox"] inhibit_idle fullscreen

# Turn off screen after some idle time
exec swayidle -w timeout 1000 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'
