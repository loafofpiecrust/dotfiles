[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected-prefix = "%{A1:networkmanager_dmenu:}"
format-connected-suffix = "%{A}"
format-disconnected-prefix = ${self.format-connected-prefix}
format-disconnected-suffix = ${self.format-connected-suffix}

format-connected = <ramp-signal> <label-connected>
; format-connected-underline = #9f78e1
label-connected = %essid% [%downspeed%]

format-packetloss = <label-packetloss>
label-packetloss = Connecting

format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected =  Borked
label-disconnected-foreground = ${colors.foreground-alt}

; wifi: , , , , , , , , , , 爛, 嵐, 襤, 蠟, 冷, 
